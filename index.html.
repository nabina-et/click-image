<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <title>Click để đổi ảnh</title>
  <style>
    body { display:flex; height:100vh; align-items:center; justify-content:center; background:#f7f7f7; }
    img { max-width:90vw; max-height:80vh; cursor:pointer; border-radius:8px; box-shadow:0 6px 18px rgba(0,0,0,0.12); }
  </style>
</head>
<body>
  <img id="img" src="image1.jpg" alt="Click để đổi"/>
  <script>
    const imgs = ["image1.jpg","image2.jpg"]; // tên file ảnh
    let i = 0;
    const el = document.getElementById('img');
    el.addEventListener('click', () => {
      i = (i + 1) % imgs.length;
      el.src = imgs[i];
    });
  </script>
</body>
</html>
